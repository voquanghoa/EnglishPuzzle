<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    >
    <RelativeLayout
        android:id="@+id/adView"
        style="@style/TopAdsPanel" />
    <ImageView
        android:id="@+id/main_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-100px"
        android:layout_above="@+id/keyboard"
        />
    <RelativeLayout
        android:id="@+id/title"
        android:layout_below="@+id/adView"
        android:background="@color/lesson_title_background"
        style="@style/LessonTitlePanel"
        >
        <TextView
            android:text="@string/lesson"
            style="@style/TitleText"
            />
        <com.qhvv.englishpuzzle.control.EffectImageView
            android:layout_height="match_parent"
            android:src="@drawable/lesson_back"
            android:onClick="onHomeButtonClicked"
            style="@style/ScaledImage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_1"
        android:layout_below="@+id/title"
        android:background="@drawable/lesson_title_1"
        style="@style/LessonTitlePanel"
        >
        <TextView
            android:id="@+id/title_tv"
            android:text="Vegetable"
            android:textSize="12pt"
            style="@style/TitleText"
            />
        <com.qhvv.englishpuzzle.control.EffectImageView
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:src="@drawable/skip_lesson"
            style="@style/ScaledImage"
            />
        <com.qhvv.englishpuzzle.control.EffectImageView
            android:layout_height="match_parent"
            android:src="@drawable/audio_lesson"
            style="@style/ScaledImage"
            android:onClick="onAudioClick"
            />
    </RelativeLayout>
    <com.qhvv.englishpuzzle.control.KeyboardControl
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
    <RelativeLayout
        android:layout_below="@+id/title_1"
        android:layout_above="@+id/keyboard"
        style="@style/LessonMainImage"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onAudioClick"
            />
        </RelativeLayout>
    <com.qhvv.englishpuzzle.control.GifImageView
        android:id="@+id/image_win"
        android:tag="animation/anim_win.gif"
        style="@style/GifAnimation"
        />
    <com.qhvv.englishpuzzle.control.GifImageView
        android:id="@+id/image_wrong"
        android:tag="animation/anim_wrong.gif"
        style="@style/GifAnimation"
        />
    <com.qhvv.englishpuzzle.control.GifImageView
        android:id="@+id/image_correct"
        android:tag="animation/anim_correct.gif"
        style="@style/GifAnimation"
        />
</RelativeLayout>