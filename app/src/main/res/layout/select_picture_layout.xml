<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background">
    <RelativeLayout
        android:id="@+id/adView"
        style="@style/TopAdsPanel" />
    <RelativeLayout
        android:id="@+id/title"
        android:layout_below="@+id/adView"
        android:background="@color/lesson_title_background"
        style="@style/LessonTitlePanel"
        >
        <TextView
            android:text="@string/exercise"
            style="@style/TitleText"
            />
        <com.qhvv.englishpuzzle.control.EffectfulImageView
            android:layout_height="match_parent"
            android:src="@drawable/lesson_back"
            android:onClick="onHomeButtonClicked"
            style="@style/ScaledImage"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_1"
        android:layout_below="@+id/title"
        android:background="@drawable/lesson_title_1"
        android:layout_height="@dimen/exercise_text_title_height"
        style="@style/LessonTitlePanel"
        >
        <TextView
            android:id="@+id/title_tv"
            android:text="@string/exercise_text_help"
            android:textAllCaps="false"
            android:textSize="10pt"
            style="@style/TitleText"
            />
        <com.qhvv.englishpuzzle.control.EffectfulImageView
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"
            android:src="@drawable/skip_lesson"
            android:onClick="onSkipClicked"
            style="@style/ScaledImage"
            />
        <com.qhvv.englishpuzzle.control.EffectfulImageView
            android:layout_height="match_parent"
            android:src="@drawable/play_button"
            style="@style/ScaledImage"
            android:onClick="onPlayButtonClicked"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_1"
        android:layout_above="@+id/text_message"
        >
        <View
            android:id="@+id/center"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true"
            />
    <com.qhvv.englishpuzzle.control.AutoHeightControl
        android:id="@+id/exercise_image_0"
        style="@style/ExerciseButton"
        android:layout_above="@+id/center"
        android:layout_alignRight="@+id/center"
        android:background="#fff"
        android:onClick="onAnswerClicked"
        android:tag="0"
        />
    <com.qhvv.englishpuzzle.control.AutoHeightControl
        android:id="@+id/exercise_image_1"
        style="@style/ExerciseButton"
        android:layout_above="@+id/center"
        android:layout_alignLeft="@+id/center"
        android:background="#fff"
        android:onClick="onAnswerClicked"
        android:tag="1"
        />
    <com.qhvv.englishpuzzle.control.AutoHeightControl
        android:id="@+id/exercise_image_2"
        style="@style/ExerciseButton"
        android:layout_below="@+id/center"
        android:layout_alignRight="@+id/center"
        android:background="#fff"
        android:onClick="onAnswerClicked"
        android:tag="2"
        />
    <com.qhvv.englishpuzzle.control.AutoHeightControl
        android:id="@+id/exercise_image_3"
        style="@style/ExerciseButton"
        android:layout_below="@+id/center"
        android:layout_alignLeft="@+id/center"
        android:background="#fff"
        android:onClick="onAnswerClicked"
        android:tag="3"
        />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_message"
        android:text="@string/correct"
        android:background="@color/message_correct"
        android:layout_height="@dimen/exercise_message_height"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/exercise_message_bottom_margin"
        style="@style/TitleText"
        android:visibility="invisible"
        />
</RelativeLayout>